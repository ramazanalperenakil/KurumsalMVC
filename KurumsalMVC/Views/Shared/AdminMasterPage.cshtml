        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->

            @{
                KurumsalMVCEntities db2 = new KurumsalMVCEntities();


                foreach (var item in db2.Bilgi.ToList())
                {
                    <a href="~/" target="_blank" class="brand-link">
                        <img src="/uploads/@item.SİteLogo" class="img-fluid" height="70" /><br>

                        <span class="brand-text font-weight-light">@item.SiteBaslik</span>
                    </a>
                }
            }
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->

                @{
                    KurumsalMVCEntities db = new KurumsalMVCEntities();
                    int kadi = Convert.ToInt32(Session["KullaniciID"]);
                    foreach (var item in db.Kullanicilar.ToList())
                    {
                        if (item.KullaniciID == kadi)
                        {
                            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                                <div class="image">
                                    <img src="@item.foto" class="img-circle elevation-2" alt="User Image">
                                </div>
                                <div class="info">
                                    <a href="/Admin/Profil/" class="d-block">@item.Ad @item.Soyad</a>
                                </div>
                            </div>
                        }


                    }
                }


