        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCRvBPo3-t31YFk588DpMYS6EqKf-oGBSI"></script>
        <script src="~/thema/js/gmap.js"></script>
        <!-- mixit up -->
        <script src="~/thema/js/wow.js"></script>
        <script src="~/thema/js/jquery.mixitup.min.js"></script>
        <script src="~/thema/js/jquery.fitvids.js"></script>
        <script src="~/thema/js/bootstrap-select.min.js"></script>

        <!-- revolution slider js -->
        <script src="~/thema/assets/revolution/js/jquery.themepunch.tools.min.js"></script>
