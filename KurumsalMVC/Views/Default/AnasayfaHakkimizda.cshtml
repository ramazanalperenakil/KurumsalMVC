@using KurumsalMVC.Models.Entitiy
@model List<Hakkimizda>
@foreach (var x in Model)
{
    <!--Content Column-->
    <div class="content-column clearfix">
        <div class="content-box">
            <div class="inner-box wow fadeInLeft">
                
                <!--Section Title-->
                <div class="sec-title">
                        <h2>@x.Baslik</h2>
                    </div>
                <div class="text">

                    @if (x.Yazi.ToString().Length < 20)
                    {
                        @MvcHtmlString.Create(x.Yazi.ToString())
                    }
                    else
                    {
                        @MvcHtmlString.Create(x.Yazi.Substring(0, 250) + "...")
                        
                    }
                  



                </div>
                <div class="link-btn"><a href="/Hakkimizda" class="btn-style-two">Devamını Oku <span class="fa fa-long-arrow-right"></span></a></div>
            </div>
        </div>
    </div>
 
    <!--Image Column-->
    <div class="image-column" style="background-image:url(/uploads/@x.Resim);"><div class="image"><img src="/uploads/@x.Resim" alt=""></div></div>

}