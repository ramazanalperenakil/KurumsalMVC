    <div class="container">
        <div class="row clearfix">
            <!--Icon Column-->
            @Html.Action("SliderALt", "Default")

            <!--Link Column-->
            <div class="column link-column col-md-4 col-sm-6 col-xs-12">
                <div class="link-btn5">
                    <a href="/iletisim" class="btn-style-two">İletişime Geçin</a>
                </div>
            </div>

        </div>
    </div>
</section>

