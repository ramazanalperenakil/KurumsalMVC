@using KurumsalMVC.Models.Entitiy
@model List<Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

@Html.Action("SiteBilgi", "Default")

<!--Start rev slider wrapper-->


 







<section class="rev_slider_wrapper">
        <div id="slider1" class="rev_slider" data-version="5.0">
            <ul>
                @foreach (var slider in Model)
                {

                    <li data-transition="slotzoom-horizontal">
                        <a ><img src="~/uploads/slider/@slider.Resim" width="100%" height="700" alt="" /></a>
                        @*<img src="~/uploads/projeler/galeri/@item.ResimURL">*@


                    </li>


                    @*<li data-transition="slotzoom-horizontal">
                <img src="/uploads/slider/@slider.Resim" alt="" width="1920" height="700" >


            </li>*@
                }

            </ul>
        </div>
    </section>
<!--End rev slider wrapper-->
<!--Call to Action-->
